<form bindsubmit='formSubmit'>
<view class="cu-bar solid-bottom">
  <view class='action'>
    <text class='icon-title text-green'></text>信息填写
  </view>
</view>
<view class="cu-form-group">
    <view class='title'>姓名</view>
    <input placeholder="输入您的姓名" class='radius' name='name'></input>
  </view>
<view class="cu-form-group">
    <view class='title'>性别：{{sex}}</view>
    <switch class='switch-sex' checked bindchange='sexChange' name='sex'></switch>
  </view>
<view class="cu-form-group">
    <view class='title'>手机号码</view>
    <input placeholder="输入您的手机号" class='radius' name='tel'></input>
    <view class="cu-capsule radius">
      <view class='cu-tag bg-green '>
        +86
      </view>
      <view class="cu-tag line-green">
        中国大陆
      </view>
    </view>
  </view>
  <view class="padding flex flex-direction">
    <button class='cu-btn bg-green lg' form-type="submit">确定</button>
  </view>
</form>